.container{
  margin-top: -20px;
}

input,
.received-msg-box {
  width: 100%;
  border: 1px solid #d7dae1;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  min-height: 64rpx;
  margin-bottom: 20rpx;
}

.received-msg-box {
  padding: 20rpx;
  min-height: 300rpx;
}

.label {
  font-size: 26rpx;
  color: #848587;
  margin-bottom: 12rpx;
}
/* 连接、断开连接按钮 */
.is-flex {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

button[type="primary"],
button[type="warn"] {
  width: 40% !important;
  font-size: 28rpx;
  font-weight: normal;
  margin: 0 !important;
}

/* 以下为自定义部分 */
.information{
  margin: 10px;
  border-radius: 20px ;
  background-color: aquamarine;  
  height:150px;
  display:flex;
  flex-direction: column;
  justify-content: center;   
  align-items:center;   
}
.icon-img
{
  width: 90px;  
  height: 90px;
  border-radius: 50%;
}
.icon-name{
  color: #000;
}

.slider-style {
  margin: 10px;
  margin-left: 20px;
  margin-right: 16px;
}
/* 选择框 */
.picker{
  padding: 13px;
  
}

.classroom_picker{ 
  border-radius: 20px ;
  margin: 10px;
  background-color: rgb(223, 214, 96);
}